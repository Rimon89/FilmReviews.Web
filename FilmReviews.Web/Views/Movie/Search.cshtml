@model IEnumerable<FilmReviews.Web.ViewModels.ListMovie>

@{
    ViewData["Title"] = "Search";
}

@if (Model != null)
{

    <h1>Search</h1>

    <table class="table table-hover ">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Year)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.imdbID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Poster)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-default">
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.imdbID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        <img src="@item.Poster" width="100" height="125" />
                    </td>
                    <td class="btn-group">
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.imdbID">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1>Movie Not Found</h1>
}