@model IEnumerable<FilmReviews.Web.ViewModels.Movie>

@{
    ViewData["Title"] = "GetAllMovies";
}

@if (Model.Count() > 0)
{
    <h1>Movies</h1>
    <table class="table table-hover ">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Year)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Runtime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Director)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Language)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Awards)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImdbRating)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr class="table-default">
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Runtime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Director)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Language)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Awards)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImdbRating)
                </td>
                <td class="btn-group">
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.ImdbId">Details</a>
                    <a class="btn btn-outline-warning" asp-action="Delete" asp-route-id="@item.ImdbId">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1>Empty! :(</h1>
}