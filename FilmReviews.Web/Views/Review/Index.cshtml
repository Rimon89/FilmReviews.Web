@model FilmReviews.Web.ViewModels.Review


<h1>Review</h1>
@using (Html.BeginForm("AddReview", "Review"))
{
    <div>
        <div class="form-group row">
            <label for="inputImdbId" class="col-sm-2 col-form-label">Movie Id</label>
            <div class="col-sm-10">
                <input asp-for="ImdbId" type="text" readonly class="form-control" id="inputImdbId">
                <span asp-validation-for="ImdbId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputMovieTitle" class="col-sm-2 col-form-label">Movie Title</label>
            <div class="col-sm-10">
                <input asp-for="MovieTitle" type="text" readonly class="form-control" id="inputMovieTitle">
                <span asp-validation-for="MovieTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputAuthor" class="col-sm-2 col-form-label">Author</label>
            <div class="col-sm-10">
                <input asp-for="Author" type="text" class="form-control" id="inputAuthor">
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputRating" class="col-sm-2 col-form-label">Rating (1-5)</label>
            <div class="col-sm-10">
                <input asp-for="Rating" type="text" class="form-control" id="inputRating">
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputHeader" class="col-sm-2 col-form-label">Header</label>
            <div class="col-sm-10">
                <input asp-for="Name" type="text" class="form-control" id="inputHeader">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="textAreaMovieReview" class="col-sm-2 col-form-label">Review</label>
            <div class="col-sm-10">
                <textarea asp-for="MovieReview" type="text" class="form-control" id="textAreaMovieReview"></textarea>
                <span asp-validation-for="MovieReview" class="text-danger"></span>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary form-control">Create</button>
}
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
