@model FilmReviews.Web.ViewModels.Review

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

@using (Html.BeginForm("Edit", "Review"))
{
<div>
    <div class="form-group row" hidden>
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" type="text" readonly class="form-control">
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row" hidden>
        <label asp-for="ImdbId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ImdbId" type="text" readonly class="form-control">
            <span asp-validation-for="ImdbId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="MovieTitle" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="MovieTitle" type="text" readonly class="form-control">
            <span asp-validation-for="MovieTitle" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Header</label>
        <div class="col-sm-10">
            <input asp-for="Name" type="text" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Rating" class="col-sm-2 col-form-label">Rating (1-5)</label>
        <div class="col-sm-10">
            <input asp-for="Rating" type="text" class="form-control">
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Author" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Author" type="text" readonly class="form-control">
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="MovieReview" class="col-sm-2 col-form-label">Review</label>
        <div class="col-sm-10">
            <textarea asp-for="MovieReview" type="text" class="form-control"></textarea>
            <span asp-validation-for="MovieReview" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <a class="btn btn-primary form-control" asp-action="GetAllReviews">Back to List</a>
        </div>
        <div class="col">
            <button type="submit" class="btn btn-success form-control">Update</button>
        </div>
    </div>
</div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
